<h1 class="page-header">Signature</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Document</th>
      <th>Signed At</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @signature.name %></td>
      <td>Guest Confidentiality Agreement</td>
      <td><%= @signature.created_at %></td>
      <td><%= link_to 'Delete', admin_signature_path(@signature), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %></td>
    </tr>
  </tbody>
</table>

<div id="signature">
  <div class="sig sigWrapper">
    <canvas class="pad" width="650" height="150"></canvas>
  </div>
</div>

<script>
$(function() {
  renderSignature(<%= @signature.signature.to_json.html_safe %>, 'div#signature');
});
</script>
